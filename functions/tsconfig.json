{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"outDir": "lib",
		"sourceMap": true,
		"strict": true,
		"target": "es2019",
		"noImplicitAny": true,
		"esModuleInterop": true,
		"baseUrl": "src",
		"paths": {
			"@/*": ["/*"],
			"@typings/*": ["typings/*"],
			"@routes/*": ["routes/*"],
			"@config/*": ["config/*"],
			"@utils/*": ["utils/*"]
		},
		"plugins": [
			{ "transform": "typescript-transform-paths" },
		]
	},
	"include": [
		"src"
	]
}
