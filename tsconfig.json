{
	"compilerOptions": {
		"target": "ES2022",
		"moduleResolution": "Node",
		"module": "CommonJS",
		"outDir": "./build",
		"strict": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"baseUrl": "./",
		"paths": {
			"@routes/*": ["src/routes/*"],
			"@utils/*": ["src/utils/*"],
			"@typings/*": ["src/typings/*"],
			"@config/*": ["src/config/*"]
		}
	},
	"include": [
		"src/**/*",
		"eslint.config.mjs"
	]
}
